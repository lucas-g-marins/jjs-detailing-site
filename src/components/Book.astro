---
import Button from "./Button.astro";
import BeforeAfter from "./BeforeAfter.astro";
import Reviews from "./Reviews.astro";
---

<div class="book__container">
  <div class="book__text-container">
    <p>Book today to return your car to its former glory!</p>
    <Button
      link="https://app.squareup.com/appointments/book/esmdw7ewls8kl8/LV46MTHN5EQG1/start"
      text="Book Now!"
    />
  </div>
  <div>
    <Reviews />
  </div>
</div>

<style>
  .book__container {
    margin: 2em auto;
    display: flex;
    gap: 4em;
    justify-content: center;
    align-items: center;
    width: 80%;
  }

  .book__container > div {
    flex: 1;
  }

  .book__text-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1em;
  }

  p {
    text-align: left;
    font-family: "futura-100", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 1.5em;
  }

  @media screen and (max-width: 900px) {
    .book__container {
      flex-direction: column;
      gap: 2em;
    }

    .book__text-container {
      align-items: center;
      text-align: center;
    }
  }
</style>
