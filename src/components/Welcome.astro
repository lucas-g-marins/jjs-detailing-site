---
import Button from "./Button.astro";
---

<div class="container">
  <main>
    <section id="hero">
      <h1 data-split="heading">JJ'S DETAILING</h1>
      <h2 data-split="heading">Meticulous Detailing. Stunning Results.</h2>
      <Button link="#" text="BOOK NOW" />
    </section>
  </main>
</div>

<style>
  .container {
    font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
      Arial, sans-serif;
    height: 100%;
    background-color: white;
    color: #f25042;
  }

  main {
    height: 100%;
    display: flex;
    justify-content: center;
  }

  #hero {
    display: flex;
    align-items: start;
    flex-direction: column;
    justify-content: center;
  }

  h1 {
    font-size: 40px;
    margin-top: 0.25em;
  }

  h2 {
    margin: 0 0 1em;
    font-weight: normal;
    color: #111827;
    font-size: 30px;
  }

  p {
    color: #4b5563;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.006em;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .container {
      display: flex;
      flex-direction: column;
    }

    #hero {
      display: block;
      padding-top: 10%;
    }

    h1 {
      line-height: 1.5;
    }
  }
</style>
